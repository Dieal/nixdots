# Options
enable_audio_bell no
confirm_os_window_close 0
scrollback_pager bat
cursor_trail 1

# Keyboard shortcuts
# Default Ones:
#   Copy: Ctrl + Shift + V
#   Scrollback: Ctrl + Shift + H
#   Font Size: Ctrl + Shift + [+/-]
#   Reload Config File: Ctrl + Shift + F5
#   See Config: Ctrl + Shift + F2
#   Open Config File: Ctrl + Shift + F1 
# map ctrl+l no_op
map ctrl+l no_op
map ctrl+k scroll_line_up
map ctrl+j scroll_line_down
map ctrl+shift+k scroll_page_up
map ctrl+shift+j scroll_page_down

# Font
font_family      FiraCode Nerd Font
italic_font      auto
bold_font        auto
bold_italic_font auto
font_size        14.5

# Term
term xterm-256color
background-opacity 0.75

# Misc
shell .
editor .

include matugen.conf
#include catpuccin.conf
